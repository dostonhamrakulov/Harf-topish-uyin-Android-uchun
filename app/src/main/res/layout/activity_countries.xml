<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="idoston.com.harftopish.countries">
    <TextView
        app:layout_widthPercent="15%"
        app:layout_heightPercent="10%"
        android:id="@+id/text_m_1"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:text=""/>
    <TextView
        app:layout_widthPercent="70%"
        android:layout_toRightOf="@id/text_m_1"
        app:layout_heightPercent="10%"
        android:background="@color/app_back_white"
        android:layout_marginTop="5dp"
        android:id="@+id/text_m_2"
        android:textAlignment="center"
        android:textSize="20dp"
        android:text="@string/question"/>
    <TextView
        app:layout_widthPercent="15%"
        app:layout_heightPercent="10%"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/text_m_2"
        android:id="@+id/text_2"
        android:textAlignment="center"
        android:text=""/>

</android.support.percent.PercentRelativeLayout>
